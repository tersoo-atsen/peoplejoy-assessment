{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "import/no-unresolved": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "packageDir": "./"
            }
        ]
    }
}
